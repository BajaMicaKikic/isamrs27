@model mrs.ApplicationCore.Entities.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Registruj se</a><br />
  @*  <input type="submit" value="Facebook" class="btn btn-default" onclick="InitialiseFacebook()" />*@
    <h2>Part 1 - Facebook Login Button</h2>

    <fb:login-button autologoutlink="true" perms="read_friendlists, create_event, email, publish_stream"></fb:login-button>

    <p>Facebook Access Token: @TempData["accessToken"]</p>
    <p>Facebook User Id: @TempData["uid"]</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="@Url.Content("~/js/Facebook.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            InitialiseFacebook();//inicijalizacija za ucitavanje stranice
        });
    </script>
}
